<section class="responsive slider">
					{% for row in rows %}
						<div>
					{{ row.attributes }}{{ row.content }}
						</div>
					{% endfor %}
</section>
	<script src="/themes/iomwpp/js/slick/jquery-2.2.0.min.js"></script>
	<script src="/themes/iomwpp/js/slick/slick.js" type="text/javascript" charset="utf-8"></script>
  
	<script type="text/javascript">
    $(document).on('ready', function() {  
		$('.responsive').slick({
		  dots: true,
		  infinite: false,
		  speed: 300,
		  slidesToShow: 7,
		  slidesToScroll: 7,
		  responsive: [
			{
			  breakpoint: 1024,
			  settings: {
				slidesToShow: 4,
				slidesToScroll: 4,
				infinite: true,
				dots: true
			  }
			},
			{
			  breakpoint: 600,
			  settings: {
				slidesToShow: 3,
				slidesToScroll: 3,
			  }
			},
			{
			  breakpoint: 480,
			  settings: {
				slidesToShow: 2,
				slidesToScroll: 3,
			  }
			}
			//
		  ]
		});
    });
</script>